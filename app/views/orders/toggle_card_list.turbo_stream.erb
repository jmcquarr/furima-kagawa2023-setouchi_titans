<%= turbo_stream.replace "card_frame" do %>
  <%= turbo_frame_tag "card_frame" do %>
    <% if @show_card_list %>
      <%= render 'card_list', locals: { cards: @cards, selected_card: @selected_card } %>
    <% else %>
      <%= render 'selected_card', selected_card: @selected_card %>
    <% end %>
  <% end %>
<% end %>
